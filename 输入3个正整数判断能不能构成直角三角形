#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int main()
{
	int a, b, c;
	while (1)
	{
		scanf("%d %d %d", &a, &b, &c);
		if (a > 0 && b > 0 && c > 0)

			if (a * a + b * b == c * c || a * a + c * c == b * b || b * b + c * c == a * a)
			{
				printf("能构成直角三角形");
			}
			else
			{
				printf("不能构成直角三角形");
			}
		else
		{
			printf("输入错误，重新输入：\n");
			continue;
		}
		break;
	}
	return 0;
}
